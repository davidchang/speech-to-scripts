{
  "name": "Speech to Script",
  "description": "Speech to Script",
  "version": "0.1",
  "icons": {
    "128": "icons/mario.png"
  },
  "background": {
    "scripts": [
      "background/bundle.js"
    ]
  },
  "options_page": "options/options.html",
  "browser_action": {
    "default_popup" : "popup/popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "storage",
    "background",
    "http://*/*",
    "https://*/*"
  ]
}
